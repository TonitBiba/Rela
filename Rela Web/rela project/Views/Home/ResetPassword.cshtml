
@{
    Layout = null;
    var email = ViewBag.Email;
    var code = ViewBag.Code;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ResetPassword</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/umd/popper.min.js"></script>
    <style>
        body {
            background-color: #E2FFDF
        }

    </style>
</head>

<body>
    <div class="container">
        <div class="card d-block border-primary mb-lg-1" style="width:320px; margin:auto; margin-top:50px">
            <div class="card-header">
                <h4 style="text-align:center"><span class="fa fa-gear"></span> Change your password </h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("ResetPassword", "api/account", FormMethod.Post))
                {
                    <div class="form-group">
                        <label for="Email"> Email </label>
                        <input type="email" class="form-control" id="Email" name="Email" value="@email" readonly />
                    </div>
                    <div class="form-group">
                        <label for="Password">New password</label>
                        <input type="password" id="Password" name="Password" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="ConfirmPassword">Confirm password</label>
                        <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control" />
                    </div>
                    <div style="display:none">
                        <input type="text" name="code" id="code" value="@code" />
                    </div>
                    <input type="submit" class="btn btn-lg btn-outline-primary d-block m-auto" style="width:60%" value="Submit" />
                }
            </div>
        </div>
    </div>
</body>
</html>

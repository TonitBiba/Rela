@using Rela_project.Models.LogIn
@{ 
    User user = (User)HttpContext.Current.Session["userSession"];
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="~/Images/Rela.png" />
    <script src='https://www.google.com/recaptcha/api.js'></script>
    <script src="https://www.google.com/recaptcha/api.js?render=6LePo4YUAAAAAJF4KNSNsBxshWHSmJLwAVQjIoOX"></script>

    @Styles.Render("~/Content/layout")
    @Scripts.Render("~/bundles/layout")

    <style>
        .container {
            margin-top: 60px
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-light bg-light fixed-top dropdown show">
        <a class="navbar-brand" href="#"><img src="~/Images/Rela.png" width="30" height="30" class="rounded-circle" />Rela project</a>
        <button class="navbar-toggler" aria-expanded="false" aria-controls="navbarColor03" aria-label="Toggle navigation" type="button" data-target="#navbarColor03" data-toggle="collapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor03">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/Home/Main"> Home </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/CheckSimilarity/ImagesProcesedHistory"> Images history </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Voice/voiceHistory"> Voice history </a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <img id="userProfileImage" src="@user.user_image" width="40" height="40" class="rounded-circle" style="margin-left:5px" />
                </li>
                <li class="nav-item">
                    <h5 style="margin-top:5px; margin-left:10px; margin-right:10px"> Hello @user.FirstName</h5>
                </li>
                <li class="nav-item">
                    <a class="btn btn-outline-warning" id="btnLogOf" href="/Home/LogOff"><span class="fa fa-sign-out"></span> Logoff </a>
                </li>
            </ul>
        </div>
    </nav>

    <div id="bodyPart" class="container border-left border-right border-top border-bottom">
        @RenderBody()
    </div>
    <div style="display:block">
        <p style="text-align:right; margin-right:20px">&copy; @DateTime.Now.Year - Rela project Tonit Biba</p>
    </div>
    <script>
        $(document).ready(function () {
            if ($("#userProfileImage").attr('src') == "data:Image/png;base64,") {
                $("#userProfileImage").attr('src',"../Images/userIcon.png");
            }
        });
    </script>
</body>
</html>